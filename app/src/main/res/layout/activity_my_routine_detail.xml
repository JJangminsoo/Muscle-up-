<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/myRoutineToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="루틴1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myRoutineToolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/exerciseImage1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/push_up"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"
                android:layout_marginStart="30dp"/>
            <ImageView
                android:id="@+id/exerciseImage2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/squat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exerciseImage1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>
            <ImageView
                android:id="@+id/exerciseImage3"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/jumping_jack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exerciseImage2"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/imageText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="푸시업"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@id/exerciseImage1"
                app:layout_constraintBottom_toTopOf="@id/imageText2"
                app:layout_constraintStart_toStartOf="@id/imageText2"
                app:layout_constraintEnd_toEndOf="@id/imageText2"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/imageText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12회 * 5세트"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/imageText1"
                app:layout_constraintStart_toEndOf="@id/exerciseImage1"
                app:layout_constraintBottom_toBottomOf="@id/exerciseImage1"
                android:layout_marginStart="50dp"/>

            <TextView
                android:id="@+id/imageText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스쿼트"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@id/exerciseImage2"
                app:layout_constraintBottom_toTopOf="@id/imageText4"
                app:layout_constraintStart_toStartOf="@id/imageText4"
                app:layout_constraintEnd_toEndOf="@id/imageText2"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/imageText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12회 * 5세트"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/imageText3"
                app:layout_constraintStart_toEndOf="@id/exerciseImage2"
                app:layout_constraintBottom_toBottomOf="@id/exerciseImage2"
                android:layout_marginStart="50dp"/>

            <TextView
                android:id="@+id/imageText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점핑잭"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@id/exerciseImage3"
                app:layout_constraintBottom_toTopOf="@id/imageText6"
                app:layout_constraintStart_toStartOf="@id/imageText6"
                app:layout_constraintEnd_toEndOf="@id/imageText6"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/imageText6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20회 * 5세트"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/imageText5"
                app:layout_constraintStart_toEndOf="@id/exerciseImage3"
                app:layout_constraintBottom_toBottomOf="@id/exerciseImage3"
                android:layout_marginStart="50dp"/>

            <Button
                android:id="@+id/decibelStartButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/exerciseImage3"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@color/primaryColor"
                android:text="사용자 소음 측정"/>
            <Button
                android:id="@+id/myRoutineStartButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/decibelStartButton"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="시작하기"
                android:background="@color/primaryColor"/>
            <Button
                android:id="@+id/exerciseAddButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/decibelStartButton"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:text="+운동추가"
                android:background="@color/primaryColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/decibelStartButton"
                app:layout_constraintStart_toEndOf="@id/myRoutineStartButton"
                app:layout_constraintEnd_toStartOf="@id/exerciseAddButton"
                android:layout_marginTop="20dp"
                tools:text="db 0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>